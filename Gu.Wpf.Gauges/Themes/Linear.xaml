<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Gu.Wpf.Gauges">

    <Style TargetType="{x:Type local:LinearRange}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:LinearRange}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:LinearIndicator}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:LinearIndicator}">
                    <ContentPresenter />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:LinearAxis}">
        <Style.Triggers>
            <Trigger Property="Placement" Value="Bottom">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type local:LinearAxis}">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid x:Name="AxisGrid"
                                      Margin="{TemplateBinding Padding}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <local:LinearTextBar x:Name="TickLabels"
                                                         Grid.Row="1"
                                                         Padding="0.5,0,0.5,2"
                                                         HorizontalTextAlignment="Center"
                                                         TickFrequency="{TemplateBinding MajorTickFrequency}"
                                                         Ticks="{TemplateBinding MajorTicks}"
                                                         VerticalTextAlignment="Bottom" />

                                    <local:LinearTickBar x:Name="MajorTicks"
                                                         Grid.Row="2"
                                                         Height="8"
                                                         Fill="{TemplateBinding Foreground}"
                                                         TickFrequency="{TemplateBinding MajorTickFrequency}"
                                                         TickWidth="1"
                                                         Ticks="{TemplateBinding MajorTicks}" />

                                    <local:LinearTickBar x:Name="MinorTicks"
                                                         Grid.Row="2"
                                                         Height="5"
                                                         VerticalAlignment="Bottom"
                                                         ExcludeTicks="{Binding ElementName=MajorTicks, Path=AllTicks}"
                                                         Fill="{TemplateBinding Foreground}"
                                                         TickFrequency="{TemplateBinding MinorTickFrequency}"
                                                         TickWidth="1"
                                                         Ticks="{TemplateBinding MinorTicks}" />

                                    <Rectangle x:Name="Line"
                                               Grid.Row="2"
                                               Height="1"
                                               VerticalAlignment="Bottom"
                                               Fill="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>

            <Trigger Property="Placement" Value="Top">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type local:LinearAxis}">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid x:Name="AxisGrid"
                                      Margin="{TemplateBinding Padding}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <local:LinearTickBar x:Name="MajorTicks"
                                                         Grid.Row="0"
                                                         Height="8"
                                                         Fill="{TemplateBinding Foreground}"
                                                         TickFrequency="{TemplateBinding MajorTickFrequency}"
                                                         TickWidth="1"
                                                         Ticks="{TemplateBinding MajorTicks}" />

                                    <local:LinearTickBar x:Name="MinorTicks"
                                                         Grid.Row="0"
                                                         Height="5"
                                                         VerticalAlignment="Top"
                                                         ExcludeTicks="{Binding ElementName=MajorTicks, Path=AllTicks}"
                                                         Fill="{TemplateBinding Foreground}"
                                                         TickFrequency="{TemplateBinding MinorTickFrequency}"
                                                         TickWidth="1"
                                                         Ticks="{TemplateBinding MinorTicks}" />

                                    <Rectangle x:Name="Line"
                                               Grid.Row="0"
                                               Height="1"
                                               VerticalAlignment="Top"
                                               Fill="{TemplateBinding Foreground}" />

                                    <local:LinearTextBar x:Name="TickLabels"
                                                         Grid.Row="1"
                                                         Padding="0.5,2,0.5,0"
                                                         HorizontalTextAlignment="Center"
                                                         TickFrequency="{TemplateBinding MajorTickFrequency}"
                                                         Ticks="{TemplateBinding MajorTicks}"
                                                         VerticalTextAlignment="Top" />
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>

            <Trigger Property="Placement" Value="Left">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type local:LinearAxis}">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid x:Name="AxisGrid"
                                      Margin="{TemplateBinding Padding}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <local:LinearTickBar x:Name="MajorTicks"
                                                         Grid.Column="0"
                                                         Width="8"
                                                         Fill="{TemplateBinding Foreground}"
                                                         TickFrequency="{TemplateBinding MajorTickFrequency}"
                                                         TickWidth="1"
                                                         Ticks="{TemplateBinding MajorTicks}" />

                                    <local:LinearTickBar x:Name="MinorTicks"
                                                         Grid.Column="0"
                                                         Width="5"
                                                         HorizontalAlignment="Left"
                                                         ExcludeTicks="{Binding ElementName=MajorTicks, Path=AllTicks}"
                                                         Fill="{TemplateBinding Foreground}"
                                                         TickFrequency="{TemplateBinding MinorTickFrequency}"
                                                         TickWidth="1"
                                                         Ticks="{TemplateBinding MinorTicks}" />

                                    <Rectangle x:Name="Line"
                                               Grid.Column="0"
                                               Width="1"
                                               HorizontalAlignment="Left"
                                               Fill="{TemplateBinding Foreground}" />

                                    <local:LinearTextBar x:Name="TickLabels"
                                                         Grid.Column="1"
                                                         Padding="2,0.5,0,0.5"
                                                         HorizontalTextAlignment="Left"
                                                         TickFrequency="{TemplateBinding MajorTickFrequency}"
                                                         Ticks="{TemplateBinding MajorTicks}"
                                                         VerticalTextAlignment="Center" />
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>

            <Trigger Property="Placement" Value="Right">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type local:LinearAxis}">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid x:Name="AxisGrid"
                                      Margin="{TemplateBinding Padding}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <local:LinearTextBar x:Name="TickLabels"
                                                         Grid.Column="1"
                                                         Padding="0,0.5,2,0.5"
                                                         HorizontalTextAlignment="Right"
                                                         TickFrequency="{TemplateBinding MajorTickFrequency}"
                                                         Ticks="{TemplateBinding MajorTicks}"
                                                         VerticalTextAlignment="Center" />

                                    <local:LinearTickBar x:Name="MajorTicks"
                                                         Grid.Column="2"
                                                         Width="8"
                                                         Fill="{TemplateBinding Foreground}"
                                                         TickFrequency="{TemplateBinding MajorTickFrequency}"
                                                         TickWidth="1"
                                                         Ticks="{TemplateBinding MajorTicks}" />

                                    <local:LinearTickBar x:Name="MinorTicks"
                                                         Grid.Column="2"
                                                         Width="5"
                                                         HorizontalAlignment="Right"
                                                         ExcludeTicks="{Binding ElementName=MajorTicks, Path=AllTicks}"
                                                         Fill="{TemplateBinding Foreground}"
                                                         TickFrequency="{TemplateBinding MinorTickFrequency}"
                                                         TickWidth="1"
                                                         Ticks="{TemplateBinding MinorTicks}" />

                                    <Rectangle x:Name="Line"
                                               Grid.Column="2"
                                               Width="1"
                                               HorizontalAlignment="Right"
                                               Fill="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type local:LinearGauge}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:LinearGauge}">
                    <Border Margin="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="Content" Value="{x:Null}" />
                    <Condition Property="Placement" Value="Bottom" />
                </MultiTrigger.Conditions>
                <MultiTrigger.Setters>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type local:LinearGauge}">
                                <Border Margin="{TemplateBinding Padding}"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <local:LinearAxis />

                                        <local:LinearIndicator Grid.Row="1"
                                                               Value="{TemplateBinding Value}">
                                            <Path Width="10"
                                                  Height="10"
                                                  VerticalAlignment="Bottom"
                                                  Data="M-0.5,0 L+0.5,0 0,-1z"
                                                  Fill="{TemplateBinding Foreground}"
                                                  Stretch="Fill" />
                                        </local:LinearIndicator>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </MultiTrigger.Setters>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="Content" Value="{x:Null}" />
                    <Condition Property="Placement" Value="Top" />
                </MultiTrigger.Conditions>
                <MultiTrigger.Setters>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type local:LinearGauge}">
                                <Border Margin="{TemplateBinding Padding}"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <local:LinearIndicator Value="{TemplateBinding Value}">
                                            <Path Width="10"
                                                  Height="10"
                                                  VerticalAlignment="Top"
                                                  Data="M-0.5,0 L0.5,0 0,1z"
                                                  Fill="{TemplateBinding Foreground}"
                                                  Stretch="Fill" />
                                        </local:LinearIndicator>
                                        <local:LinearAxis Grid.Row="1" />
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </MultiTrigger.Setters>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="Content" Value="{x:Null}" />
                    <Condition Property="Placement" Value="Left" />
                </MultiTrigger.Conditions>
                <MultiTrigger.Setters>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type local:LinearGauge}">
                                <Border Margin="{TemplateBinding Padding}"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <local:LinearIndicator Value="{TemplateBinding Value}">
                                            <Path Width="10"
                                                  Height="10"
                                                  HorizontalAlignment="Left"
                                                  Data="M-0.5,-0.5 L-0.5,0.5 0,0z"
                                                  Fill="{TemplateBinding Foreground}"
                                                  Stretch="Fill" />
                                        </local:LinearIndicator>
                                        <local:LinearAxis Grid.Column="1" />
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </MultiTrigger.Setters>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="Content" Value="{x:Null}" />
                    <Condition Property="Placement" Value="Right" />
                </MultiTrigger.Conditions>
                <MultiTrigger.Setters>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type local:LinearGauge}">
                                <Border Margin="{TemplateBinding Padding}"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <local:LinearAxis Grid.Column="0" />

                                        <local:LinearIndicator Grid.Column="1"
                                                               Value="{TemplateBinding Value}">
                                            <Path Width="10"
                                                  Height="10"
                                                  HorizontalAlignment="Right"
                                                  Data="M0.5,-0.5 L0.5,0.5 0,0z"
                                                  Fill="{TemplateBinding Foreground}"
                                                  Stretch="Fill" />
                                        </local:LinearIndicator>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </MultiTrigger.Setters>
            </MultiTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>