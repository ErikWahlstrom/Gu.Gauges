<UserControl x:Class="Gu.Wpf.Gauges.Sample.LinearBarsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gauges="https://github.com/JohanLarsson/Gu.Wpf.Gauges"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sample="clr-namespace:Gu.Wpf.Gauges.Sample"
             d:DesignWidth="550"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <sample:TickBarVm HorizontalTextAlignment="Left"
                          IsDirectionReversed="False"
                          MajorTickFrequency="50"
                          MajorTicks="75"
                          Maximum="100"
                          Minimum="0"
                          MinorTickFrequency="5"
                          Placement="Bottom"
                          ReservedSpace="0"
                          TextOrientation="Horizontal"
                          VerticalTextAlignment="Top"
                          Value="1" />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <UniformGrid Rows="2">
            <UniformGrid.Resources>
                <Style TargetType="{x:Type GroupBox}">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <Border Height="100" Background="LightGray">
                                    <ContentPresenter Content="{Binding}" />
                                </Border>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </UniformGrid.Resources>
            <GroupBox Header="LinearAxis">
                <gauges:LinearAxis Foreground="Black"
                                   IsDirectionReversed="{Binding IsDirectionReversed}"
                                   MajorTickFrequency="{Binding MajorTickFrequency}"
                                   MajorTicks="{Binding MajorTicks}"
                                   Maximum="{Binding Maximum}"
                                   Minimum="{Binding Minimum}"
                                   MinorTickFrequency="{Binding MinorTickFrequency}"
                                   Placement="{Binding Placement}"
                                   ReservedSpace="{Binding ReservedSpace}"
                                   TextOrientation="{Binding TextOrientation}" />
            </GroupBox>

            <GroupBox Header="Framework TickBar">
                <TickBar Fill="Black"
                         IsDirectionReversed="{Binding IsDirectionReversed}"
                         Maximum="{Binding Maximum}"
                         Minimum="{Binding Minimum}"
                         Placement="{Binding Placement}"
                         ReservedSpace="{Binding ReservedSpace}"
                         TickFrequency="{Binding MajorTickFrequency}"
                         Ticks="{Binding MajorTicks}" />
            </GroupBox>

            <GroupBox Header="BlockBar with ticks">
                <gauges:LinearBlockBar Fill="CornflowerBlue"
                                       IsDirectionReversed="{Binding IsDirectionReversed}"
                                       Maximum="{Binding Maximum}"
                                       Minimum="{Binding Minimum}"
                                       Placement="{Binding Placement}"
                                       ReservedSpace="{Binding ReservedSpace}"
                                       TickFrequency="{Binding MajorTickFrequency}"
                                       TickGap="2"
                                       Ticks="{Binding MajorTicks}"
                                       Value="{Binding Value}" />
            </GroupBox>

            <GroupBox Header="BlockBar no ticks">
                <gauges:LinearBlockBar Fill="CornflowerBlue"
                                       IsDirectionReversed="{Binding IsDirectionReversed}"
                                       Maximum="{Binding Maximum}"
                                       Minimum="{Binding Minimum}"
                                       Placement="{Binding Placement}"
                                       ReservedSpace="{Binding ReservedSpace}"
                                       Stroke="Black"
                                       Value="{Binding Value}" />
            </GroupBox>

            <GroupBox Header="LinearTickBar">
                <gauges:LinearTickBar Fill="Black"
                                      IsDirectionReversed="{Binding IsDirectionReversed}"
                                      Maximum="{Binding Maximum}"
                                      Minimum="{Binding Minimum}"
                                      Placement="{Binding Placement}"
                                      ReservedSpace="{Binding ReservedSpace}"
                                      TickFrequency="{Binding MajorTickFrequency}"
                                      Ticks="{Binding MajorTicks}" />
            </GroupBox>

            <GroupBox Header="TextTickBar">
                <Grid Background="Bisque" ShowGridLines="True">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <gauges:LinearTextTickBar Grid.Row="0"
                                              Grid.RowSpan="2"
                                              Grid.Column="0"
                                              Grid.ColumnSpan="2"
                                              Foreground="Black"
                                              HorizontalTextAlignment="{Binding HorizontalTextAlignment}"
                                              IsDirectionReversed="{Binding IsDirectionReversed}"
                                              Maximum="{Binding Maximum}"
                                              Minimum="{Binding Minimum}"
                                              Placement="{Binding Placement}"
                                              ReservedSpace="{Binding ReservedSpace}"
                                              TextOrientation="{Binding TextOrientation}"
                                              TickFrequency="{Binding MajorTickFrequency}"
                                              Ticks="{Binding MajorTicks}" />
                    <Rectangle Grid.Row="0"
                               Grid.RowSpan="2"
                               Grid.Column="0"
                               Grid.ColumnSpan="2"
                               Stroke="Black"
                               StrokeThickness="1" />
                </Grid>
            </GroupBox>
        </UniformGrid>
        <ContentPresenter Grid.Row="1" Content="{Binding}" />
    </Grid>
</UserControl>
