<UserControl x:Class="Gu.Wpf.Gauges.Sample.FatStylesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gauges="https://github.com/JohanLarsson/Gu.Wpf.Gauges"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="AngularGaugeStyle" TargetType="{x:Type gauges:AngularGauge}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type gauges:AngularGauge}">
                        <Grid>
                            <gauges:AngularTextBar x:Name="TextBar"
                                                   gauges:Axis.MinReservedSpace="{Binding TextSpace, RelativeSource={RelativeSource Self}}"
                                                   FontSize="20"
                                                   Foreground="LightGray"
                                                   MaxAngle="{TemplateBinding MaxAngle}"
                                                   Maximum="{TemplateBinding Maximum}"
                                                   MinAngle="{TemplateBinding MinAngle}"
                                                   Minimum="{TemplateBinding Minimum}"
                                                   TextOrientation="{TemplateBinding TextOrientation}"
                                                   TickFrequency="{TemplateBinding MajorTickFrequency}"
                                                   Ticks="{TemplateBinding MajorTicks}" />

                            <gauges:AngularBlockBar Fill="LightGray"
                                                    Gap="0"
                                                    MaxAngle="{TemplateBinding MaxAngle}"
                                                    Maximum="{TemplateBinding Maximum}"
                                                    MinAngle="{TemplateBinding MinAngle}"
                                                    Opacity="0.2"
                                                    ReservedSpace="{TemplateBinding ReservedSpace}"
                                                    TickFrequency="{TemplateBinding MajorTickFrequency}"
                                                    TickLength="45"
                                                    Ticks="{TemplateBinding MajorTicks}"
                                                    Value="{TemplateBinding Maximum}" />

                            <gauges:AngularRange x:Name="Indicator" />

                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Bottom"
                                       Text="{Binding Value, RelativeSource={RelativeSource AncestorType={x:Type gauges:AngularGauge}}}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LinearGaugeStyle" TargetType="{x:Type gauges:LinearGauge}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type gauges:LinearGauge}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <gauges:LinearTextTickBar Grid.Row="0"
                                                      VerticalAlignment="Bottom"
                                                      FontSize="20"
                                                      Foreground="LightGray"
                                                      Placement="Bottom"
                                                      TextOrientation="Horizontal"
                                                      TickFrequency="{TemplateBinding MajorTickFrequency}"
                                                      Ticks="{TemplateBinding MajorTicks}" />

                            <gauges:LinearBlockBar Grid.Row="1"
                                                   Grid.Column="0"
                                                   Fill="White"
                                                   Gap="1"
                                                   TickFrequency="{TemplateBinding MajorTickFrequency}"
                                                   Ticks="{TemplateBinding MajorTicks}" />

                            <gauges:LinearBlockBar Grid.Row="1"
                                                   Grid.Column="0"
                                                   Fill="LightGray"
                                                   Gap="1"
                                                   Opacity="0.2"
                                                   TickFrequency="{TemplateBinding MajorTickFrequency}"
                                                   Ticks="{TemplateBinding MajorTicks}"
                                                   Value="{TemplateBinding Maximum}" />

                            <TextBlock Grid.Row="1"
                                       Grid.Column="1"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"
                                       Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=gauges:Gauge}, Path=Value}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10"
          Background="#FF1D1D1D"
          ShowGridLines="True"
          TextElement.Foreground="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <gauges:AngularGauge Width="200"
                             Height="125"
                             Style="{StaticResource AngularGaugeStyle}"
                             TextElement.FontSize="20"
                             Value="{Binding Value, ElementName=ValueSlider}" />

        <gauges:LinearGauge Grid.Row="1"
                            Width="200"
                            MajorTickFrequency="25"
                            MajorTicks="10"
                            Maximum="100"
                            Minimum="0"
                            Placement="Bottom"
                            Style="{StaticResource LinearGaugeStyle}"
                            TextElement.FontSize="20"
                            Value="{Binding Value, ElementName=ValueSlider}" />

        <Slider x:Name="ValueSlider"
                Grid.Row="3"
                Width="200"
                Maximum="100"
                Minimum="0"
                Value="80" />
    </Grid>
</UserControl>
