<Window x:Class="Gu.Wpf.Gauges.Sample.Sandbox.SandboxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:gauges="https://github.com/JohanLarsson/Gu.Wpf.Gauges"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        d:DesignHeight="100"
        SizeToContent="WidthAndHeight"
        mc:Ignorable="d">
    <Grid Margin="2">
        <!--<gauges:Ring Fill="Blue"
                     Stroke="YellowGreen"
                     StrokeThickness="{Binding ElementName=RecTickBar, Path=StrokeThickness}"
                     Thickness="{Binding ElementName=RecTickBar, Path=Thickness}" />-->
        <gauges:AngularTickBar x:Name="RecTickBar"
                               Fill="Red"
                               Maximum="10"
                               Minimum="0"
                               Start="-180"
                               Stroke="Black"
                               StrokeThickness="1"
                               Thickness="Infinity"
                               TickFrequency="2.5"
                               TickShape="Arc"
                               TickWidth="8" />

    </Grid>
</Window>
