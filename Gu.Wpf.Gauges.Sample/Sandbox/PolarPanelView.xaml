<UserControl x:Class="Gu.Wpf.Gauges.Sample.Sandbox.PolarPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gauges="https://github.com/JohanLarsson/Gu.Wpf.Gauges"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <gauges:PolarCanvas SnapsToDevicePixels="False">
        <Ellipse Width="10"
                 Height="10"
                 gauges:PolarCanvas.Angle="0"
                 gauges:PolarCanvas.Radius="0"
                 Fill="HotPink" />
        <Ellipse Width="8"
                 Height="8"
                 gauges:PolarCanvas.Angle="0"
                 gauges:PolarCanvas.Radius="0"
                 Fill="Black" />
        <Ellipse Width="4"
                 Height="4"
                 gauges:PolarCanvas.Angle="0"
                 gauges:PolarCanvas.Radius="0"
                 Fill="Blue" />
        <Ellipse Width="10"
                 Height="10"
                 gauges:PolarCanvas.Angle="45"
                 gauges:PolarCanvas.Radius="100"
                 Fill="HotPink" />
        <Ellipse Width="10"
                 Height="10"
                 gauges:PolarCanvas.Angle="90"
                 gauges:PolarCanvas.Radius="50"
                 Fill="HotPink" />
        <Ellipse Width="10"
                 Height="10"
                 gauges:PolarCanvas.Angle="180"
                 gauges:PolarCanvas.Radius="50"
                 Fill="HotPink" />
        <Ellipse Width="10"
                 Height="10"
                 gauges:PolarCanvas.Angle="270"
                 gauges:PolarCanvas.Radius="50"
                 Fill="HotPink" />
    </gauges:PolarCanvas>
</UserControl>
