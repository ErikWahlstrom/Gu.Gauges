<Window x:Class="Gu.Wpf.Gauges.Sample.Sandbox.AngularTickBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:gauges="https://github.com/JohanLarsson/Gu.Wpf.Gauges"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sample="clr-namespace:Gu.Wpf.Gauges.Sample"
        Title="AngularTickBarWindow"
        Width="350"
        Height="300"
        mc:Ignorable="d">
    <Window.DataContext>
        <sample:AngularTickBarVm End="140"
                                 IsDirectionReversed="False"
                                 MajorTickFrequency="10"
                                 MajorTicks="85"
                                 Maximum="100"
                                 Minimum="0"
                                 Start="-140"
                                 Thickness="10"
                                 TickWidth="5"
                                 Value="100" />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="50" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <UniformGrid Rows="1">
            <gauges:AngularTickBar Margin="{Binding RelativeSource={RelativeSource Self}, Path=Overflow}"
                                   End="{Binding End}"
                                   Fill="Red"
                                   IsDirectionReversed="{Binding IsDirectionReversed}"
                                   Maximum="{Binding Maximum}"
                                   Minimum="{Binding Minimum}"
                                   Start="{Binding Start}"
                                   Stroke="Black"
                                   StrokeThickness="1"
                                   Thickness="Infinity"
                                   TickFrequency="{Binding MajorTickFrequency}"
                                   TickShape="Arc"
                                   TickWidth="{Binding TickWidth}"
                                   Ticks="{Binding MajorTicks}"
                                   Value="{Binding Value}" />
            <Grid>
                <gauges:Ring Fill="Blue"
                             Stroke="GreenYellow"
                             StrokeThickness="{Binding ElementName=ArcTickBar, Path=StrokeThickness}"
                             Thickness="{Binding ElementName=ArcTickBar, Path=Thickness}" />
                <gauges:AngularTickBar x:Name="ArcTickBar"
                                       End="{Binding End}"
                                       Fill="Red"
                                       IsDirectionReversed="{Binding IsDirectionReversed}"
                                       Maximum="{Binding Maximum}"
                                       Minimum="{Binding Minimum}"
                                       Start="-180"
                                       Stroke="Black"
                                       StrokeThickness="{Binding StrokeThickness}"
                                       Thickness="{Binding Thickness}"
                                       TickFrequency="{Binding MajorTickFrequency}"
                                       TickShape="Arc"
                                       TickWidth="{Binding TickWidth}"
                                       Ticks="{Binding MajorTicks}"
                                       Value="100" />

            </Grid>

            <Grid>
                <gauges:Ring Fill="Blue"
                             Stroke="YellowGreen"
                             StrokeThickness="{Binding ElementName=RecTickBar, Path=StrokeThickness}"
                             Thickness="{Binding ElementName=RecTickBar, Path=Thickness}" />
                <gauges:AngularTickBar x:Name="AngularTickBar"
                                       End="{Binding End}"
                                       Fill="Red"
                                       IsDirectionReversed="{Binding IsDirectionReversed}"
                                       Maximum="{Binding Maximum}"
                                       Minimum="{Binding Minimum}"
                                       Start="-180"
                                       Stroke="Black"
                                       StrokeThickness="1"
                                       Thickness="10"
                                       TickFrequency="{Binding MajorTickFrequency}"
                                       TickShape="Rectangle"
                                       TickWidth="{Binding TickWidth}"
                                       Ticks="{Binding MajorTicks}"
                                       Value="{Binding Value}" />

            </Grid>

            <gauges:AngularTickBar Margin="{Binding RelativeSource={RelativeSource Self}, Path=Overflow}"
                                   End="{Binding End}"
                                   Fill="Red"
                                   IsDirectionReversed="{Binding IsDirectionReversed}"
                                   Maximum="{Binding Maximum}"
                                   Minimum="{Binding Minimum}"
                                   Start="{Binding Start}"
                                   Stroke="Black"
                                   StrokeThickness="{Binding StrokeThickness}"
                                   Thickness="{Binding Thickness}"
                                   TickFrequency="{Binding MajorTickFrequency}"
                                   TickShape="Rectangle"
                                   TickWidth="100"
                                   Ticks="{Binding MajorTicks}"
                                   Value="{Binding Value}" />

            <gauges:AngularTickBar Margin="{Binding RelativeSource={RelativeSource Self}, Path=Overflow}"
                                   End="{Binding End}"
                                   Fill="Red"
                                   IsDirectionReversed="{Binding IsDirectionReversed}"
                                   Maximum="{Binding Maximum}"
                                   Minimum="{Binding Minimum}"
                                   Start="{Binding Start}"
                                   Stroke="Black"
                                   StrokeThickness="{Binding StrokeThickness}"
                                   Thickness="{Binding Thickness}"
                                   TickFrequency="{Binding MajorTickFrequency}"
                                   TickShape="Arc"
                                   TickWidth="100"
                                   Ticks="{Binding MajorTicks}"
                                   Value="{Binding Value}" />

            <gauges:AngularTickBar Margin="{Binding RelativeSource={RelativeSource Self}, Path=Overflow}"
                                   End="{Binding End}"
                                   Fill="Red"
                                   IsDirectionReversed="{Binding IsDirectionReversed}"
                                   Maximum="{Binding Maximum}"
                                   Minimum="{Binding Minimum}"
                                   Start="{Binding Start}"
                                   Stroke="Black"
                                   StrokeThickness="{Binding StrokeThickness}"
                                   Thickness="{Binding Thickness}"
                                   TickFrequency="{Binding MajorTickFrequency}"
                                   TickShape="Arc"
                                   TickWidth="{Binding TickWidth}"
                                   Ticks="{Binding MajorTicks}"
                                   Value="{Binding Value}" />

            <gauges:AngularTickBar Margin="{Binding RelativeSource={RelativeSource Self}, Path=Overflow}"
                                   End="{Binding End}"
                                   Fill="Red"
                                   IsDirectionReversed="{Binding IsDirectionReversed}"
                                   Maximum="{Binding Maximum}"
                                   Minimum="{Binding Minimum}"
                                   Start="{Binding Start}"
                                   Stroke="Black"
                                   StrokeThickness="{Binding StrokeThickness}"
                                   Thickness="{Binding Thickness}"
                                   TickFrequency="{Binding MajorTickFrequency}"
                                   TickShape="Rectangle"
                                   TickWidth="{Binding TickWidth}"
                                   Ticks="{Binding MajorTicks}"
                                   Value="{Binding Value}" />
        </UniformGrid>
        <ContentPresenter Grid.Row="1"
                          Content="{Binding}" />
    </Grid>
</Window>
