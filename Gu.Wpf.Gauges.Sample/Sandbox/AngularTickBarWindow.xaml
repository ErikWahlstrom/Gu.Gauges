<Window x:Class="Gu.Wpf.Gauges.Sample.Sandbox.AngularTickBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:gauges="https://github.com/JohanLarsson/Gu.Wpf.Gauges"
        xmlns:local="clr-namespace:Gu.Wpf.Gauges.Sample.Sandbox"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sample="clr-namespace:Gu.Wpf.Gauges.Sample"
        Title="AngularTickBarWindow"
        Width="300"
        Height="300"
        mc:Ignorable="d">
    <Window.DataContext>
        <sample:AngularTickBarVm IsDirectionReversed="False"
                                 MajorTickFrequency="25"
                                 MajorTicks="85"
                                 MaxAngle="0"
                                 Maximum="100"
                                 MinAngle="-180"
                                 Minimum="0"
                                 MinorTickFrequency="5"
                                 Value="30" />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="50"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border>
            <gauges:AngularTickBar MaxAngle="{Binding MaxAngle}"
                                   Maximum="{Binding Maximum}"
                                   MinAngle="{Binding MinAngle}"
                                   Minimum="{Binding Minimum}"
                                   StrokeThickness="2"
                                   TickFrequency="{Binding MajorTickFrequency}"
                                   Ticks="{Binding MajorTicks}" />
        </Border>

        <ContentPresenter Grid.Row="1"
                          Content="{Binding}" />
    </Grid>
</Window>
