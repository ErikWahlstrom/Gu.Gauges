<Application x:Class="GaugeBox.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:gaugeBox="clr-namespace:GaugeBox"
             xmlns:gauges="clr-namespace:Gauges;assembly=Gauges"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate x:Key="VmTemplate" DataType="{x:Type gaugeBox:Vm}">
            <Expander Header="Control the vm">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Min, StringFormat='Min:{0:F1}'}" />
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Min}" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Max, StringFormat='Max:{0:F1}'}" />
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Max}" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding Value, StringFormat='Value:{0:F1}'}" />
                    <Slider Grid.Row="2" Grid.Column="1" Value="{Binding Value}" Minimum="{Binding Min}" Maximum="{Binding Max}" />
                </Grid>
            </Expander>
        </DataTemplate>

        <DataTemplate x:Key="GaugeTemplate" DataType="{x:Type gaugeBox:Vm}">
            <Expander Header="Control the control :)">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="ShowLabels" />
                    <CheckBox Grid.Row="0" Grid.Column="1" IsChecked="{Binding ShowLabels}" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="ShowTicks" />
                    <CheckBox Grid.Row="1" Grid.Column="1" IsChecked="{Binding ShowTicks}" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="ShowTrack" />
                    <CheckBox Grid.Row="2" Grid.Column="1" IsChecked="{Binding ShowTrack}" />
                </Grid>
            </Expander>
        </DataTemplate>
    </Application.Resources>
</Application>