<Window x:Class="GaugeBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gaugeBox="clr-namespace:GaugeBox" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gauges="clr-namespace:Gauges;assembly=Gauges"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        d:DataContext="{d:DesignInstance gaugeBox:Vm, IsDesignTimeCreatable=True}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <gauges:Gauge Grid.Row="0" Value="{Binding Value}" Minimum="{Binding Min}" Maximum="{Binding Max}">
        </gauges:Gauge>
        <ContentPresenter Grid.Row="1" Content="{Binding}" ContentTemplate="{StaticResource VmTemplate}"/>
        <StackPanel Grid.Row="2">
            <gauges:BlockBar  Height="20" Width="100" Divisions="4" Gap="5" Fill="Blue"/>
            <Grid Background="Bisque" Margin="20,0,20,0">
                <Grid.Resources>
                    <Style x:Key="TickStyle" TargetType="{x:Type TickBar}">
                        <Setter Property="Placement" Value="Top"/>
                        <Setter Property="VerticalAlignment" Value="Bottom"/>
                        <Setter Property="Minimum" Value="0"/>
                        <Setter Property="Maximum" Value="100"/>
                        <Setter Property="Fill" Value="Blue"/>
                    </Style>
                </Grid.Resources>
                <gauges:TextTickBar Height="50" TickFrequency="25" Style="{StaticResource TickStyle}"/>
                <TickBar Height="20" TickFrequency="5" Style="{StaticResource TickStyle}"/>
                <TickBar Height="40" TickFrequency="25" Style="{StaticResource TickStyle}"/>
            </Grid>
            <gauges:TextTickBar Height="50" Minimum="0" Maximum="100" Fill="Black" TickFrequency="25"/>
        </StackPanel>


    </Grid>
</Window>
