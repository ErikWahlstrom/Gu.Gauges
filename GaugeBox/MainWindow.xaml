<Window x:Class="GaugeBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:gaugeBox="clr-namespace:GaugeBox"
        xmlns:gauges="clr-namespace:Gauges;assembly=Gauges"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        d:DataContext="{d:DesignInstance gaugeBox:Vm,
                                         IsDesignTimeCreatable=True}"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <gauges:Gauge Grid.Row="0"
                      Maximum="{Binding Max}"
                      Minimum="{Binding Min}"
                      Value="{Binding Value}" />
        <ContentPresenter Grid.Row="1"
                          Content="{Binding}"
                          ContentTemplate="{StaticResource VmTemplate}" />
        <StackPanel Grid.Row="2">
            <gauges:BlockBar Width="100"
                             Height="20"
                             Divisions="4"
                             Fill="Blue"
                             Gap="5" />
            <Grid Margin="20,0,20,0" Background="Bisque">
                <Grid.Resources>
                    <Style x:Key="TickStyle" TargetType="{x:Type TickBar}">
                        <Setter Property="Placement" Value="Top" />
                        <Setter Property="VerticalAlignment" Value="Bottom" />
                        <Setter Property="Minimum" Value="0" />
                        <Setter Property="Maximum" Value="100" />
                        <Setter Property="Fill" Value="Blue" />
                    </Style>
                </Grid.Resources>
                <gauges:TextTickBar Height="50"
                                    ContentStringFormat="F1"
                                    FontSize="12"
                                    Style="{StaticResource TickStyle}"
                                    TickFrequency="25" />
                <TickBar Height="10"
                         Style="{StaticResource TickStyle}"
                         TickFrequency="5" />
                <TickBar Height="40"
                         Style="{StaticResource TickStyle}"
                         TickFrequency="25" />
            </Grid>
            <gauges:TextTickBar Height="50"
                                Fill="Black"
                                Maximum="100"
                                Minimum="0"
                                TickFrequency="25" />
            <gauges:TextTickBar Height="50" Minimum="0" Maximum="100" Fill="Green" FontFamily="Arial"
                                Ticks="20,70" TickFrequency="50"/>

        </StackPanel>
    </Grid>
</Window>