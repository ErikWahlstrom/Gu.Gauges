<Window x:Class="Gu.Gauges.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:gauges="http://gu.se/Gauges"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sample="clr-namespace:Gu.Gauges.Sample" Title="MainWindow"
        Width="525" Height="350"
        d:DataContext="{d:DesignInstance sample:Vm,
                                         IsDesignTimeCreatable=True}"
        mc:Ignorable="d"
        >
    <TabControl>
        <TabItem Header="LinearGauge">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <gauges:LinearGauge x:Name="Gauge" Grid.Row="0"
                                    Margin="15" HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Marker="{Binding Marker}"
                                    Maximum="{Binding Max}"
                                    Minimum="{Binding Min}"
                                    Placement="{Binding Placement}"
                                    ShowLabels="{Binding ShowLabels}"
                                    ShowTrack="{Binding ShowTrack}"
                                    MajorTickFrequency="{Binding TickFrequency}"
                                    Value="{Binding Value}"
                                    >
                    <gauges:LinearGauge.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <LinearGradientBrush.GradientStops>
                                <GradientStopCollection>
                                    <GradientStop Offset="0.0" Color="Red" />
                                    <GradientStop Offset="0.10" Color="Red" />
                                    <GradientStop Offset="0.10" Color="Green" />
                                    <GradientStop Offset="0.90" Color="Green" />
                                    <GradientStop Offset="0.90" Color="Red" />
                                    <GradientStop Offset="1.0" Color="Red" />
                                </GradientStopCollection>
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </gauges:LinearGauge.Background>
                </gauges:LinearGauge>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <ContentPresenter Grid.Column="0"
                                      Content="{Binding}"
                                      ContentTemplate="{StaticResource VmTemplate}"
                                      />
                    <ContentPresenter Grid.Column="1"
                                      Content="{Binding}"
                                      ContentTemplate="{StaticResource GaugeTemplate}"
                                      />
                </Grid>

            </Grid>
        </TabItem>

        <TabItem Header="LinearBars">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <WrapPanel>
                    <GroupBox Background="Lavender" Header="TickBar">
                        <TickBar Width="100" Height="100"
                                 Fill="Black"
                                 IsDirectionReversed="{Binding TickBarVm.IsDirectionReversed}"
                                 Maximum="{Binding TickBarVm.Maximum}"
                                 Minimum="{Binding TickBarVm.Minimum}"
                                 Placement="{Binding TickBarVm.TickBarPlacement}"
                                 ReservedSpace="{Binding TickBarVm.ReservedSpace}"
                                 TickFrequency="{Binding TickBarVm.TickFrequency}"
                                 Ticks="{Binding TickBarVm.Ticks}"
                                 />
                    </GroupBox>

                    <GroupBox Background="DarkSeaGreen" Header="LinearTickBar">
                        <gauges:LinearTickBar Width="100" Height="100"
                                              Fill="Black"
                                              IsDirectionReversed="{Binding TickBarVm.IsDirectionReversed}"
                                              Maximum="{Binding TickBarVm.Maximum}"
                                              Minimum="{Binding TickBarVm.Minimum}"
                                              Placement="{Binding TickBarVm.TickBarPlacement}"
                                              ReservedSpace="{Binding TickBarVm.ReservedSpace}"
                                              TickFrequency="{Binding TickBarVm.TickFrequency}"
                                              Ticks="{Binding TickBarVm.Ticks}"
                                              />
                    </GroupBox>

                    <!--<GroupBox Background="LightGray" Header="BlockBar">
                        <gauges:BlockBar Width="100"
                                              Height="100"
                                              Fill="Black"
                                              IsDirectionReversed="{Binding TickBarVm.IsDirectionReversed}"
                                              Maximum="{Binding TickBarVm.Maximum}"
                                              Minimum="{Binding TickBarVm.Minimum}"
                                              Placement="{Binding TickBarVm.TickBarPlacement}"
                                              ReservedSpace="{Binding TickBarVm.ReservedSpace}"
                                              TickFrequency="{Binding TickBarVm.TickFrequency}"
                                              Ticks="{Binding TickBarVm.Ticks}" />
                    </GroupBox>-->

                    <GroupBox Background="Bisque" Header="TextTickBar">
                        <gauges:TextTickBar Width="100" Height="100"
                                            Foreground="Black"
                                            IsDirectionReversed="{Binding TickBarVm.IsDirectionReversed}"
                                            Maximum="{Binding TickBarVm.Maximum}"
                                            Minimum="{Binding TickBarVm.Minimum}"
                                            Placement="{Binding TickBarVm.TickBarPlacement}"
                                            ReservedSpace="{Binding TickBarVm.ReservedSpace}"
                                            TickFrequency="{Binding TickBarVm.TickFrequency}"
                                            Ticks="{Binding TickBarVm.Ticks}"
                                            />
                    </GroupBox>


                </WrapPanel>
                <ContentPresenter Grid.Row="1" Content="{Binding TickBarVm}" />
            </Grid>
        </TabItem>

        <TabItem Header="AngularBars">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <WrapPanel>
                    <Border Background="Bisque">
                        <gauges:AngularTickBar Width="100" Height="100"
                                               Fill="Black"
                                               IsDirectionReversed="{Binding AngularTickBarVm.IsDirectionReversed}"
                                               MaxAngle="{Binding AngularTickBarVm.MaxAngle}"
                                               Maximum="{Binding AngularTickBarVm.Maximum}"
                                               MinAngle="{Binding AngularTickBarVm.MinAngle}"
                                               Minimum="{Binding AngularTickBarVm.Minimum}"
                                               PenWidth="1"
                                               ReservedSpace="{Binding AngularTickBarVm.ReservedSpace}"
                                               TickFrequency="{Binding AngularTickBarVm.TickFrequency}"
                                               Ticks="{Binding AngularTickBarVm.Ticks}"
                                               />
                    </Border>

                    <Border Background="Lavender">
                        <gauges:AngularTextBar Width="100" Height="100"
                                               IsDirectionReversed="{Binding AngularTickBarVm.IsDirectionReversed}"
                                               MaxAngle="{Binding AngularTickBarVm.MaxAngle}"
                                               Maximum="{Binding AngularTickBarVm.Maximum}"
                                               MinAngle="{Binding AngularTickBarVm.MinAngle}"
                                               Minimum="{Binding AngularTickBarVm.Minimum}"
                                               ReservedSpace="{Binding AngularTickBarVm.ReservedSpace}"
                                               TickFrequency="{Binding AngularTickBarVm.TickFrequency}"
                                               Ticks="{Binding AngularTickBarVm.Ticks}"
                                               />
                    </Border>
                </WrapPanel>

                <ContentPresenter Grid.Row="1" Content="{Binding AngularTickBarVm}" />
            </Grid>
        </TabItem>
    </TabControl>
</Window>