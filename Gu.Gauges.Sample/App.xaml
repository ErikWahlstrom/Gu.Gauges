<Application x:Class="Gu.Gauges.Sample.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sample="clr-namespace:Gu.Gauges.Sample"
             xmlns:gauges="http://gu.se/Gauges"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate x:Key="VmTemplate" DataType="{x:Type sample:Vm}">
            <Expander Header="Control the vm">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="{Binding Min,
                                              StringFormat='Min:{0:F1}'}" />
                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Text="{Binding Min}" />

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="{Binding Max,
                                              StringFormat='Max:{0:F1}'}" />
                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Text="{Binding Max}" />

                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Text="{Binding Value,
                                              StringFormat='Value:{0:F1}'}" />
                    <Slider Grid.Row="2"
                            Grid.Column="1"
                            Maximum="{Binding Max}"
                            Minimum="{Binding Min}"
                            Value="{Binding Value}" />
                </Grid>
            </Expander>
        </DataTemplate>

        <DataTemplate x:Key="GaugeTemplate" DataType="{x:Type sample:Vm}">
            <Expander Header="Control the control :)">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="ShowLabels" />
                    <CheckBox Grid.Row="0"
                              Grid.Column="1"
                              IsChecked="{Binding ShowLabels}" />

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="ShowMajorTicks" />
                    <CheckBox Grid.Row="1"
                              Grid.Column="1"
                              IsChecked="{Binding ShowTicks}" />

                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Text="ShowTrack" />
                    <CheckBox Grid.Row="2"
                              Grid.Column="1"
                              IsChecked="{Binding ShowTrack}" />

                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               Text="Placement" />
                    <ComboBox Grid.Row="3"
                              Grid.Column="1"
                              SelectedItem="{Binding Placement}"
                              sample:ItemsControlExt.EnumSource="{x:Type TickBarPlacement}" />

                    <TextBlock Grid.Row="4"
                               Grid.Column="0"
                               Text="TickFrequency" />
                    <TextBox Grid.Row="4"
                             Grid.Column="1"
                             Text="{Binding TickFrequency}" />

                    <TextBlock Grid.Row="5"
                               Grid.Column="0"
                               Text="Placement" />
                    <ComboBox Grid.Row="5"
                              Grid.Column="1"
                              SelectedItem="{Binding Marker}"
                              sample:ItemsControlExt.EnumSource="{x:Type gauges:Marker}" />
                </Grid>
            </Expander>
        </DataTemplate>
    </Application.Resources>
</Application>